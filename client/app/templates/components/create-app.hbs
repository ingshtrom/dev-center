<div class="row">
  <div class="col s12 m6">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title blue-text text-darken-2">Card Title</span>
        <div class="row">
          <form class="col s12" {{action "createApp" on="submit"}}>
            <div class="row">
              <div class="input-field col s6">
                {{input id="app-name" value=appName class="validate" type="text"}}
                <label for="app-name">Application Name</label>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="card-action">
        <button {{action "createApp" on="click"}} class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right"></i>
        </button>
      </div>
    </div>
  </div>
</div>