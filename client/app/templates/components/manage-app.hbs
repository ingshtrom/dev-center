<div class="row">
  <div class="col s12 m8">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title">
          <span class="blue-text text-darken-2">Feature Flags</span>
        </span>

        <div class="divider"></div>

        {{flags-table}}

      </div>
    </div>

    {{md-btn icon='mdi-content-add'
      	action='openNewFFModal' buttonType='floating'
      	class='btn-large right btn-float-over-sibling'}}
  </div>
</div>

{{#if isModalOpen}}
  {{#md-modal close='closeModal'}}
    <div class="modal-content">
      <form class="col s12" {{action "createFeatureFlag" on="submit"}}>
        <div class="row">
          <div class="input-field col s12">
            {{md-input value=name label='Name' class="col s12" validate=true}}
          </div>
          <div class="input-field col s12">
            {{md-input value=description label='Description' class="col s12" validate=true}}
          </div>
        </div>
      </form>
    </div>
    <div class="divider"></div>
    {{#if isModalSaving}}
        <div class="progress thin no-margin">
          <div class="indeterminate"></div>
        </div>
      {{/if}}
    <div class="modal-footer">
      <a class="waves-effect waves-teal btn-flat" {{action 'createFeatureFlag'}}>
        Create Feature Flag
      </a>
      <a class="left waves-effect waves-red btn-flat" {{action 'closeModal'}}>
        Cancel
      </a>
    </div>
  {{/md-modal}}
{{/if}}