<div class="row">
  <div class="col s12 m6">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title blue-text text-darken-2">Create New App</span>
        <div class="row">
          <form class="col s12" {{action "createApp" on="submit"}}>
            <div class="row">
              <div class="input-field col s12">
                {{input id="app-name" value=appName class="validate" type="text"}}
                <label for="app-name">Application Name</label>
              </div>
            </div>
          </form>
        </div>
      </div>
      {{#if isSaving}}
        <div class="progress thin no-margin">
          <div class="indeterminate"></div>
        </div>
      {{/if}}
      <div class="card-action">
        {{#if isValidForm}}
          <button {{action "createApp" on="click"}} class="btn-flat waves-effect waves-teal" type="submit">
            Submit
          </button>
        {{else}}
          <button class="btn-flat disabled" type="submit">
            Submit
          </button>
        {{/if}}
      </div>
    </div>
  </div>
</div>